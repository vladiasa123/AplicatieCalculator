<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Ripple effect for pressed state -->
    <item android:state_pressed="true">
        <ripple
            android:color="?attr/colorControlHighlight">
            <shape android:shape="rectangle">
                <solid android:color="#5c5c5c" /> <!-- Background color -->
                <padding
                    android:left="16dp"
                    android:top="16dp"
                    android:bottom="16dp" />
            </shape>
        </ripple>
    </item>
    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#5c5c5c" /> <!-- Background color -->
            <padding
                android:left="16dp"
                android:top="16dp"
                android:bottom="16dp" />
        </shape>
    </item>
</selector>

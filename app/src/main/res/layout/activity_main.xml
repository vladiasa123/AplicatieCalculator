<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0000">

    <!-- TextView for display -->
    <TextView
        android:id="@+id/TextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="150dp"
        android:gravity="end"
        android:padding="16dp"
        android:text=" "
        android:textColor="#000000"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- LinearLayout for buttons -->
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:padding="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TextView">

        <!-- GridLayout for number buttons -->
        <GridLayout
            android:id="@+id/gridLayoutNumbers"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
            android:layout_weight="2"
            android:backgroundTint="#434343"
            android:columnCount="3"
            android:padding="0dp"
            android:rowCount="4">

            <!-- Buttons for numbers and dot -->
            <Button
                android:id="@+id/button7"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:background="@drawable/button"
                android:gravity="center"
                android:padding="0dp"
                android:text="7"
                android:textColor="@color/white"
                android:textSize="48sp"
                tools:background="#434343" />

            <Button
                android:id="@+id/button8"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:background="@drawable/button"
                android:gravity="center"
                android:padding="0dp"
                android:text="8"
                android:textColor="@color/white"
                android:textSize="48sp"
                tools:background="#434343" />

            <Button
                android:id="@+id/button9"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:layout_column="2"
                android:layout_columnWeight="1"
                android:background="@drawable/button"
                android:gravity="center"
                android:padding="0dp"
                android:text="9"
                android:textColor="@color/white"
                android:textSize="48sp"
                tools:background="#434343" />

            <Button
                android:id="@+id/button4"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_row="1"
                android:layout_rowWeight="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:background="@drawable/button"
                android:gravity="center"
                android:padding="0dp"
                android:text="4"
                android:textColor="@color/white"
                android:textSize="48sp"
                tools:background="#434343" />

            <Button
                android:id="@+id/button5"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_row="1"
                android:layout_rowWeight="1"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:background="@drawable/button"
                android:gravity="center"
                android:padding="0dp"
                android:text="5"
                android:textColor="@color/white"
                android:textSize="48sp"
                tools:background="#434343" />

            <Button
                android:id="@+id/button6"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_row="1"
                android:layout_rowWeight="1"
                android:layout_column="2"
                android:layout_columnWeight="1"
                android:background="@drawable/button"
                android:gravity="center"
                android:padding="0dp"
                android:text="6"
                android:textColor="@color/white"
                android:textSize="48sp"
                tools:background="#434343" />

            <Button
                android:id="@+id/button1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_row="2"
                android:layout_rowWeight="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:background="@drawable/button"
                android:gravity="center"
                android:padding="0dp"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="48sp"
                tools:background="#434343" />

            <Button
                android:id="@+id/button2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_row="2"
                android:layout_rowWeight="1"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:background="@drawable/button"
                android:gravity="center"
                android:padding="0dp"
                android:text="2"
                android:textColor="@color/white"
                android:textSize="48sp"
                tools:background="#434343" />

            <Button
                android:id="@+id/button3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_row="2"
                android:layout_rowWeight="1"
                android:layout_column="2"
                android:layout_columnWeight="1"
                android:background="@drawable/button"
                android:gravity="center"
                android:padding="0dp"
                android:text="3"
                android:textColor="@color/white"
                android:textSize="48sp"
                tools:background="#434343" />

            <Button
                android:id="@+id/buttonDot"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_row="3"
                android:layout_rowWeight="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:background="@drawable/button"
                android:gravity="center"
                android:padding="0dp"
                android:text="."
                android:textColor="@color/white"
                android:textSize="48sp"
                tools:background="#434343" />

            <Button
                android:id="@+id/button0"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_row="3"
                android:layout_rowWeight="1"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:background="@drawable/button"
                android:gravity="center"
                android:padding="0dp"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="48sp"
                tools:background="#434343" />

            <Button
                android:id="@+id/buttonEqual"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_row="3"
                android:layout_rowWeight="1"
                android:layout_column="2"
                android:layout_columnWeight="1"
                android:background="@drawable/button"
                android:gravity="center"
                android:padding="0dp"
                android:text="="
                android:textColor="@color/white"
                android:textSize="48sp"
                tools:background="#434343" />
        </GridLayout>

        <!-- GridLayout for operation buttons -->
        <GridLayout
            android:id="@+id/gridLayoutOperations"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
            android:layout_weight="1"
            android:columnCount="1"
            android:padding="0dp"
            android:rowCount="5">

            <Button
                android:id="@+id/buttonDEL"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:background="@drawable/button"
                android:gravity="center"
                android:padding="0dp"
                android:text="DEL"
                android:textColor="@color/white"
                android:textSize="48sp" />

            <Button
                android:id="@+id/buttonImpartire"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_row="1"
                android:layout_rowWeight="1"
                android:background="@drawable/button"
                android:gravity="center"
                android:padding="0dp"
                android:text="/"
                android:textColor="@color/white"
                android:textSize="48sp" />

            <Button
                android:id="@+id/buttonX"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_row="2"
                android:layout_rowWeight="1"
                android:background="@drawable/button"
                android:gravity="center"
                android:padding="0dp"
                android:text="*"
                android:textColor="@color/white"
                android:textSize="48sp" />

            <Button
                android:id="@+id/buttonMinus"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_row="3"
                android:layout_rowWeight="1"
                android:background="@drawable/button"
                android:gravity="center"
                android:padding="0dp"
                android:text="-"
                android:textColor="@color/white"
                android:textSize="48sp" />

            <Button
                android:id="@+id/buttonAdunare"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_row="4"
                android:layout_rowWeight="1"
                android:background="@drawable/button"
                android:gravity="center"
                android:padding="0dp"
                android:text="+"
                android:textColor="@color/white"
                android:textSize="48sp" />
        </GridLayout>

        <!-- Blue line view -->
        <View
            android:id="@+id/blueLine"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="#1de9b6" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
